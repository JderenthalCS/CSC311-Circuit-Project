<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckMenuItem?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.shape.Ellipse?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane stylesheets="@css/sandbox.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.circuit_project.SandboxController">

    <!-- Top Bar -->
    <top>
        <AnchorPane prefHeight="50.0" style="-fx-background-color: #0D1117;">
            <children>
                <Button layoutX="14.0" layoutY="8.0" mnemonicParsing="false" text="Home" />
                <Button fx:id="clearBtn" layoutX="14.0" layoutY="8.0" mnemonicParsing="false" onAction="#clearBtnClick" text="Clear" AnchorPane.rightAnchor="10.0" />
                <MenuButton layoutX="101.0" layoutY="8.0" mnemonicParsing="false" text="Options">
                    <items>
                        <MenuItem fx:id="saveButton" onAction="#saveBtnClick" mnemonicParsing="false" text="Save" />
                        <MenuItem fx:id="loadButton" onAction="#loadBtnClick" mnemonicParsing="false" text="Load" />
                    </items>
                </MenuButton>
                <MenuButton layoutX="219.0" layoutY="8.0" mnemonicParsing="false" text="Appearance">
                    <items>
                        <CheckMenuItem fx:id="toggleGridLinesItem" mnemonicParsing="false" onAction="#onToggleGridLines" selected="true" text="Grid Lines" />
                        <MenuItem fx:id="toggleDarkModeItem" mnemonicParsing="false" onAction="#onToggleDarkMode" text="Dark Mode" />
                    </items>
                </MenuButton>
                <Text fill="WHITE" layoutX="600.0" layoutY="40.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Circuit Sandbox">
                    <font>
                        <Font size="36.0" />
                    </font>
                </Text>
            </children>
        </AnchorPane>
    </top>

    <!-- Center Workspace -->
    <center>
        <AnchorPane fx:id="playgroundPane" style="-fx-background-color: BFBFBF;">
            <children>
                <Canvas fx:id="gridCanvas" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
            </children>
        </AnchorPane>
    </center>

    <!-- Bottom Toolbar -->
    <bottom>
        <HBox alignment="CENTER" prefHeight="100.0" spacing="20.0" style="-fx-background-color: #f0f0f0;" BorderPane.alignment="CENTER">
            <!-- Battery Icon -->
            <AnchorPane fx:id="batteryIcon" onMouseClicked="#batteryClick" prefHeight="47.0" prefWidth="106.0">
                <children>
                    <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#ababab" height="15.0" layoutX="90.0" layoutY="7.0" stroke="BLACK" width="10.0" />
                    <Rectangle arcHeight="5.0" arcWidth="5.0" height="32.0" layoutX="-8.0" layoutY="-2.0" stroke="BLACK" width="104.0" />
                    <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#d78f1d" height="32.0" layoutX="71.0" layoutY="-2.0" stroke="BLACK" width="25.0" />
                </children>
            </AnchorPane>

            <!-- Lightbulb Icon -->
            <AnchorPane fx:id="lightbulbIcon" onMouseClicked="#lightbulbClick" prefHeight="91.0" prefWidth="142.0">
                <children>
                    <Ellipse fill="#f8f8f8" layoutX="69.0" layoutY="38.0" radiusX="24.0" radiusY="36.0" stroke="BLACK" />
                    <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#9ba7b2" height="12.0" layoutX="48.0" layoutY="62.0" stroke="BLACK" width="42.0" />
                    <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#818b94" height="10.0" layoutX="52.0" layoutY="70.0" stroke="BLACK" width="35.0" />
                    <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#818b94" height="9.0" layoutX="58.0" layoutY="78.0" stroke="BLACK" width="23.0" />
                    <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#818b94" height="12.0" layoutX="66.0" layoutY="81.0" stroke="BLACK" width="6.0" />
                    <Line endX="-0.5" endY="16.0" layoutX="72.0" layoutY="45.0" startX="-0.5" startY="-21.0" />
                    <Line endX="1.2" endY="8.7" layoutX="71.0" layoutY="53.0" startX="-15.5" startY="-10.0" />
                    <Line endY="-9.0" layoutX="79.0" layoutY="43.0" startX="-24.2" startY="-0.7" />
                </children>
            </AnchorPane>

            <!-- Wire Icon -->
            <Line fx:id="wire" endX="100.0" fill="#508dc6" onMouseClicked="#wireClick" startX="-5.0" stroke="#d04949" strokeLineCap="ROUND" strokeLineJoin="ROUND" strokeWidth="20.0" />
            <!-- Switch Icon -->
            <Pane fx:id="switch" onMouseClicked="#switchClick" prefHeight="38.0" prefWidth="90.0" xmlns:fx="http://javafx.com/fxml/1">
                <children>
                    <!-- Base/background rectangle -->
                    <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#f0f0f0" height="32.0" layoutX="5.0" layoutY="3.0" stroke="BLACK" strokeType="INSIDE" width="80.0" />

                    <!-- Left terminal -->
                    <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#ababab" height="15.0" layoutX="5.0" layoutY="11.5" stroke="BLACK" strokeType="INSIDE" width="10.0" />

                    <!-- Right terminal -->
                    <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#ababab" height="15.0" layoutX="75.0" layoutY="11.5" stroke="BLACK" strokeType="INSIDE" width="10.0" />

                    <!-- Switch lever (in closed position) -->
                    <Line endX="75.0" endY="19.0" startX="15.0" startY="19.0" stroke="BLACK" strokeWidth="3.0" />

                    <!-- Switch handle -->
                    <Circle centerX="40.0" centerY="19.0" fill="#d78f1d" radius="8.0" stroke="BLACK" strokeType="INSIDE" />
                </children>
            </Pane>
        </HBox>
    </bottom>
</BorderPane>
