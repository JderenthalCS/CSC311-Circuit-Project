<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckMenuItem?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.shape.Ellipse?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.circuit_project.SandboxController"
            stylesheets="@sandbox.css">

    <!-- Top Bar -->
    <top>
        <AnchorPane style="-fx-background-color: #0D1117;" prefHeight="50.0">
            <children>
                <Button layoutX="14.0" layoutY="8.0" mnemonicParsing="false" text="Home"/>
                <Button layoutX="14.0" layoutY="8.0" AnchorPane.rightAnchor="10.0" mnemonicParsing="false" text="Clear"/>
                <MenuButton layoutX="101.0" layoutY="8.0" mnemonicParsing="false" text="Options">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Save"/>
                        <MenuItem mnemonicParsing="false" text="Load"/>
                    </items>
                </MenuButton>
                <MenuButton layoutX="219.0" layoutY="8.0" mnemonicParsing="false" text="Appearance">
                    <items>
                        <CheckMenuItem fx:id="toggleGridLinesItem" mnemonicParsing="false" onAction="#onToggleGridLines" selected="true" text="Grid Lines"/>
                        <MenuItem fx:id="toggleDarkModeItem" mnemonicParsing="false" onAction="#onToggleDarkMode" text="Dark Mode"/>
                    </items>
                </MenuButton>
                <Text layoutX="600.0" layoutY="40.0" fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Circuit Sandbox">
                    <font>
                        <Font size="36.0"/>
                    </font>
                </Text>
            </children>
        </AnchorPane>
    </top>

    <!-- Center Workspace -->
    <center>
        <AnchorPane fx:id="playgroundPane" style="-fx-background-color: BFBFBF;">
            <children>
                <Canvas fx:id="gridCanvas" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0"
                        AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"/>
            </children>
        </AnchorPane>
    </center>

    <!-- Bottom Toolbar -->
    <bottom>
        <HBox spacing="20.0" alignment="CENTER" BorderPane.alignment="CENTER" prefHeight="100.0" style="-fx-background-color: #f0f0f0;">
            <!-- Battery Icon -->
            <AnchorPane fx:id="batteryIcon" onMouseClicked="#batteryClick" prefHeight="47.0" prefWidth="106.0">
                <children>
                    <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#ababab" height="15.0" layoutX="90.0" layoutY="7.0" stroke="BLACK" width="10.0"/>
                    <Rectangle arcHeight="5.0" arcWidth="5.0" height="32.0" layoutX="-8.0" layoutY="-2.0" stroke="BLACK" width="104.0"/>
                    <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#d78f1d" height="32.0" layoutX="71.0" layoutY="-2.0" stroke="BLACK" width="25.0"/>
                </children>
            </AnchorPane>

            <!-- Lightbulb Icon -->
            <AnchorPane fx:id="lightbulbIcon" onMouseClicked="#lightbulbClick" prefHeight="91.0" prefWidth="142.0">
                <children>
                    <Ellipse fill="#f8f8f8" layoutX="69.0" layoutY="38.0" radiusX="24.0" radiusY="36.0" stroke="BLACK"/>
                    <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#9ba7b2" height="12.0" layoutX="48.0" layoutY="62.0" stroke="BLACK" width="42.0"/>
                    <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#818b94" height="10.0" layoutX="52.0" layoutY="70.0" stroke="BLACK" width="35.0"/>
                    <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#818b94" height="9.0" layoutX="58.0" layoutY="78.0" stroke="BLACK" width="23.0"/>
                    <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#818b94" height="12.0" layoutX="66.0" layoutY="81.0" stroke="BLACK" width="6.0"/>
                    <Line endX="-0.5" endY="16.0" layoutX="72.0" layoutY="45.0" startX="-0.5" startY="-21.0"/>
                    <Line endX="1.2" endY="8.7" layoutX="71.0" layoutY="53.0" startX="-15.5" startY="-10.0"/>
                    <Line endY="-9.0" layoutX="79.0" layoutY="43.0" startX="-24.2" startY="-0.7"/>
                </children>
            </AnchorPane>

            <!-- Wire Icon -->
            <Line fx:id="wire" onMouseClicked="#wireClick" endX="100.0" fill="#508dc6" startX="-5.0"
                  stroke="#d04949" strokeLineCap="ROUND" strokeLineJoin="ROUND" strokeWidth="20.0"/>
        </HBox>
    </bottom>
</BorderPane>
