<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.shape.Circle?>
<Pane fx:id="switch" prefHeight="38.0" prefWidth="90.0" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <!-- Base/background rectangle -->
        <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#f0f0f0" height="32.0" layoutX="5.0" layoutY="3.0" stroke="BLACK" strokeType="INSIDE" width="80.0" />

        <!-- Left terminal -->
        <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#ababab" height="15.0" layoutX="5.0" layoutY="11.5" stroke="BLACK" strokeType="INSIDE" width="10.0" />

        <!-- Right terminal -->
        <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#ababab" height="15.0" layoutX="75.0" layoutY="11.5" stroke="BLACK" strokeType="INSIDE" width="10.0" />

        <!-- Switch lever (in closed position) -->
        <Line fx:id="leverLine" startX="15.0" startY="19.0" endX="75.0" endY="19.0" strokeWidth="3.0" stroke="BLACK" />

        <!-- Switch handle -->
        <Circle centerX="40.0" centerY="19.0" radius="8.0" fill="#d78f1d" stroke="BLACK" strokeType="INSIDE" />
    </children>
</Pane>
